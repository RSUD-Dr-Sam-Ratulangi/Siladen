#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require("../app");
var debug = require("debug")("backend:server");
var http = require("http");
const { Server } = require("socket.io");

const { Op } = require("sequelize");
const Laporan = require("../app/Laporan/model");
const db = require("../database");
require("../database");

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || "5173");
app.set("port", port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);
const io = new Server(server, {
  cors: {
    origin: [
      "http://127.0.0.1:5500",
      "http://localhost:3000",
      "http://localhost:3001",
    ],
  },
});

// interval setiap 6 jam cek status dalam antrian
setInterval(async () => {
  const dateNow = new Date();

  console.log("a");
  const t = await db.transaction();
  try {
    const update = await Laporan.update(
      {
        status: "laporan kedaluwarsa",
      },
      {
        where: {
          status: "dalam antrian",
          tanggal_laporan_kedaluwarsa: {
            [Op.lt]: dateNow,
          },
        },
        transaction: t,
      }
    );

    await t.commit();
    console.log(`Jumlah baris yang diperbarui: ${update[0]}`);
  } catch (error) {
    await t.rollback();
    console.error("Terjadi kesalahan:", error);
  }
}, 6 * 60 * 60 * 1000);

io.on("connection", (Socket) => {
  console.log("User Connected");

  Socket.on("join chat", (room) => {
    Socket.join(room);
    console.log("User Joined Room: ", room);
  });

  Socket.on("new message", (data) => {
    console.log("dari admin ini");
    console.log(data.id_user);
    Socket.to(data.id_user).emit("message received", data);
  });

  Socket.on("join admin", (room) => {
    Socket.join(room);
    console.log("user join admin " + room);
  });

  Socket.on("message admin", (data) => {
    Socket.to("admin").emit("admin received", data);
  });

  Socket.on("disconnect", (reason) => {
    console.log(`User disconnected (${reason})`);
  });
});

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on("error", onError);
server.on("listening", onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== "listen") {
    throw error;
  }

  var bind = typeof port === "string" ? "Pipe " + port : "Port " + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case "EACCES":
      console.error(bind + " requires elevated privileges");
      process.exit(1);
      break;
    case "EADDRINUSE":
      console.error(bind + " is already in use");
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === "string" ? "pipe " + addr : "port " + addr.port;
  debug("Listening on " + bind);
}
